@model IEnumerable<Bank_Application.Models.WishList>

<div>
    <h2>Wishlists</h2>
</div>
<p>
    @Html.ActionLink("Create New", "Create","Wishlists")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            Purchasable
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Purchased)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.url)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @if (item.purchasable == 1)
            {
                <span class="glyphicon glyphicon-ok" aria-hidden="false"></span>
            }
            else
            {
                <span class="glyphicon glyphicon-remove" aria-hidden="false"></span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchased)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.url)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
