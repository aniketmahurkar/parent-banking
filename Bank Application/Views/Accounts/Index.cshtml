@model IEnumerable<Bank_Application.Models.Account>

@{
    ViewBag.Title = "Accounts";
}

<h2>Account Summary for @User.Identity.Name</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecipientEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InterestRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RecipientEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InterestRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
        @if(User.IsInRole("Parent"))
           { 
           @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
           }
        |
           @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                       @if(User.IsInRole("Parent"))
           {
           @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                           
                       }
           
        </td>
    </tr>
}

</table>
